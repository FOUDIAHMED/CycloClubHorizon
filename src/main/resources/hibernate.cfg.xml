<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/CCH</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">ahmed</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>


        <mapping class="ahmed.foudi.entities.Competition"/>
        <mapping class="ahmed.foudi.entities.Cyclist"/>
        <mapping class="ahmed.foudi.entities.Stage"/>
        <mapping class="ahmed.foudi.entities.GeneralResult"/>
        <mapping class="ahmed.foudi.entities.Result"/>



    </session-factory>
</hibernate-configuration>
